generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  surname   String?
  isActive  Boolean  @default(false)
  email     String?  @unique
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Company {
  id        String    @id @default(cuid())
  name      String?
  phone     String?
  address   String?
  email     String?
  type      String? // application to farm and application to
  isActive  Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  License   License[]
}

model Drug {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String?
  License   License[]
}

model License {
  id                          String   @id @default(cuid())
  createdAt                   DateTime @default(now())
  updatedAt                   DateTime @updatedAt
  status                      String? // sent, processing, processed, accepted, rejected
  companyId                   String
  Company                     Company  @relation(fields: [companyId], references: [id])
  expiry_date                 String
  drugId                      String
  drug                        Drug     @relation(fields: [drugId], references: [id])
  proof_of_fund               Boolean  @default(false)
  has_signed_zida_application Boolean  @default(false)
  has_security_plan           Boolean  @default(false)
  has_proof_of_land           Boolean  @default(false)
  is_the_company_registered   Boolean  @default(false)
  has_work_permit             Boolean  @default(false)
  has_capacity                Boolean  @default(false)
}

model harvest {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  hactares        Decimal
  expectedHarvest Decimal
  actualHarvest   Decimal
}

model Distribution {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
